<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="your.package.name.TransactionManagerController">
    <center>
        <VBox alignment="TOP_CENTER" spacing="10">
            <Label text="Bank Account Manager" font="$xlarge-font" />
            
            <HBox alignment="CENTER" spacing="10">
                <Label text="Account Name: " />
                <TextField fx:id="accountNameField" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label text="Deposit Amount: " />
                <TextField fx:id="depositAmountField" />
                <Button text="Deposit" onAction="#handleDepositButton" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label text="Withdraw Amount: " />
                <TextField fx:id="withdrawAmountField" />
                <Button text="Withdraw" onAction="#handleWithdrawButton" />
            </HBox>
            
            <TextArea fx:id="accountDetailsArea" prefHeight="300" prefWidth="500" />
        </VBox>
    </center>

    <bottom>
        <Label text="Your bank information here" padding="10">
            <font>
                <Font name="System Bold" size="16" />
            </font>
        </Label>
    </bottom>
</BorderPane>
